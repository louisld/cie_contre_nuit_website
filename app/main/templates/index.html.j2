{% extends "base.html.j2"%}

{% block title %}
    Compagnie à Contre-Nuit
{% endblock %}

{% block header_title %}
    <img src="{{ url_for('static', filename='main/index/banner_a_contre_nuit.png') }}" alt="À Contre-Nuit">
{% endblock %}

{% block content %}
    <div class="container">
        <div class="fixed-grid has-2-cols has-1-cols-mobile">
            <div class="grid is-gap-8">
                {% for p in projects %}
                <div class="card card-project-index">
                    <div class="card-image">
                        <figure class="image is-4-by-3">
                            <object data="{{ url_for('static', filename='main/projects/uploads/'+p.id|string+'_cover.jpg') }}" type="image/jpg">
                                <img src="{{ url_for('static', filename='img/cover.png') }}" alt="Pas d'image">
                            </object>
                        </figure>
                    </div>
                    <div class="card-content">
                        <div class="content">
                            <h3><img class="is-size-2-img" src="{{ url_for('static', filename='main/projects/uploads/'+p.id|string+'_title.png') }}" alt="{{ p.short_title }}"></h3>
                            <p>{{ p.short_description }}<a href="#">En savoir plus.</a></p>
                        </div>
                    </div>
                </div>
                {% endfor %}
            </div>
        </div>
    </div>
{% endblock %}