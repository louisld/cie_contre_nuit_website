{% extends "base.html.j2"%}

{% block title %}
    Compagnie Ã  Contre-Nuit - {{ project.short_title }}
{% endblock %}

{% block header_title %}
<picture>
    <source srcset="{{ url_for('static', filename='main/projects/uploads/' + project.id|string + '_banner_mobile.png') }}" media="(max-width: 768px)">
    <img src="{{ url_for('static', filename='main/projects/uploads/' + project.id|string + '_banner.png') }}" alt="{{ project.short_title }}">
</picture>
{% endblock %}

{% block content %}
    <div class="container mt-6 mb-6">
        <div class="fixed-grid has-2-cols has-1-cols-mobile play-poster">
            <div class="grid is-gap-0">
                <img src="{{ url_for('static', filename='main/projects/uploads/' + project.id|string + '_poster.png') }}" alt="{{ project.short_title }} poster">
                <div class="play-poster-desc markdown">
                    {{ project.poster_desc|markdown }}    
                </div>
            </div>
        </div>
        {% if pgrid_exists %}
        <div class="m-4">
            {% include 'play/uploads/' + project.id|string + '_picture_grid.html.j2' %}
        </div>
        {% endif %}
    </div>
{% endblock %}